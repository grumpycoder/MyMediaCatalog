                @Html.ActionLink(Model.Company.Name, "Details", "Company", new { id = Model.CompanyId }, null)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.MediaType.Name)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.MediaType.Name)
