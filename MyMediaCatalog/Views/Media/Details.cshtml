        </dl>
    </div>
    <p>
        @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new { @class = "btn btn-primary" })
    </p>
    <hr />

    <div class="row">
        <h4>Staff</h4>
        <div class="well well-sm">
            @Html.Action("CreateNewStaffMember", "People", new { mediaId = Model.Id })
        </div>
        <div id="staffListView" style="overflow-x: hidden; overflow-y: auto;" class="col-md-6">
            @Html.Partial("../People/_StaffMembers", Model.StaffMembers)
        </div>
    </div>

</div>
<p>
    @Html.ActionLink("Back to List", "Index", "Media", null, new { @class = "btn btn-default" })
