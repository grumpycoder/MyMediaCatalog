
@(Html.Kendo().Grid<PersonViewModel>().Name("grid")
      .Columns(c =>
      {
          c.Bound(m => m.Firstname);
          c.Bound(m => m.Lastname);
          c.Bound(m => m.Title);
          c.Command(cmd =>
              cmd.Destroy().HtmlAttributes(new { @id = "cmdDelete" })).Width(110);
      })
      .Pageable().Sortable().Filterable().Resizable(r => r.Columns(true)).Reorderable(o => o.Columns(true)).Selectable()
      .Editable(e => e.Mode(GridEditMode.PopUp))
      .DataSource(src => src.Ajax()
          .PageSize(20)
          .Batch(false)
          .Read("GetGridPersonList", "People")
          .Model(m => m.Id(p => p.Id))
          .Destroy(d => d.Action("Delete", "People"))
          )
          .ToolBar(t =>
          {
              t.Custom().Text("Create New").Action("Create", "People").HtmlAttributes(new { @class = "btn btn-default" });
              t.Custom().Text("Clear Filter(s)").HtmlAttributes(new { id = "btnClearFilters" });
          }
      )
)

<script>

    $('#btnClearFilters').on('click', function (e) {
        e.preventDefault();
        if ($("#grid").data("kendoGrid").dataSource.filter() !== null)
            $("#grid").data("kendoGrid").dataSource.filter(null);
    });


    $("#grid").on("dblclick", "tr.k-state-selected", function () {
        var grid = $("#grid").data("kendoGrid");
        var id = grid.dataItem(grid.select()).Id;
        location.href = kendo.format('@(Server.UrlDecode(Url.Action("Details", "People", new { id = "{0}" })))', id);
    });


</script>
